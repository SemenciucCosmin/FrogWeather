<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_2"
    android:padding="@dimen/current_weather_layout_padding">

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/current_weather_text_margin"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/lbl_weather_date_time_today" />

    <TextView
        android:id="@+id/min_max_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/current_weather_text_margin"
        android:layout_marginTop="@dimen/current_weather_text_margin"
        android:layout_marginBottom="@dimen/current_weather_text_margin"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_time"
        tools:text="@string/lbl_weather_min_max_temperature" />


    <TextView
        android:id="@+id/current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/current_weather_text_margin"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_temperature_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/min_max_temperature"
        tools:text="@string/lbl_weather_current_temperature" />

    <TextView
        android:id="@+id/temperature_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/current_weather_temperature_unit_margin"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_temperature_unit_text_size"
        app:layout_constraintStart_toEndOf="@id/current_temperature"
        app:layout_constraintTop_toBottomOf="@id/min_max_temperature"
        tools:text="@string/lbl_weather_temperature_unit_celsius" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/current_weather_icon_size"
        android:layout_height="@dimen/current_weather_icon_size"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_time"
        tools:src="@drawable/ic_cloudy" />

    <TextView
        android:id="@+id/weather_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/weather_icon"
        app:layout_constraintStart_toStartOf="@id/weather_icon"
        app:layout_constraintTop_toBottomOf="@id/weather_icon"
        tools:text="@string/lbl_weather_state_fog" />


    <TextView
        android:id="@+id/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/current_weather_text_margin"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textColor="@color/white"
        android:textSize="@dimen/current_weather_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_temperature"
        tools:text="@string/lbl_weather_feels_like" />

</androidx.constraintlayout.widget.ConstraintLayout>