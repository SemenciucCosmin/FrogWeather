<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue_2"
    android:paddingHorizontal="@dimen/hourly_weather_padding">

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/hourly_weather_text_size"
        tools:text="21Ëš"
        android:textColor="@color/white"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/hourly_weather_temperature_margin" />

    <TextView
        android:id="@+id/precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temperature"
        android:textSize="@dimen/hourly_weather_text_size"
        tools:text="30%"
        android:textColor="@color/cyan2"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/hourly_weather_precipitation_margin" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/hourly_weather_icon_size"
        android:layout_height="@dimen/hourly_weather_icon_size"
        tools:src="@drawable/ic_cloudy"
        app:layout_constraintBottom_toTopOf="@id/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precipitation"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/hourly_weather_text_size"
        tools:text="12:00"
        android:textColor="@color/black"
        android:fontFamily="@font/pluto_sans_cond_light"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/hourly_weather_time_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>